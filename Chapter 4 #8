#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

int main()
{
    cout<<"Put in the square you want to see.\n";
    int current_sqr;
    int rice_nw=1;
    cin>>current_sqr;
    for(int i=1;i<=current_sqr;i++){
            if(current_sqr<=0){
            cout<<"This is not a number that can be used.\n";
            break;}
        rice_nw=rice_nw*2;
            if(i==1){
            rice_nw=1;}
            else if(i==current_sqr){
                cout<<"Square: "<<current_sqr<<"\nRice: "<<rice_nw<<'\n';}    //limit is 31 squares
    }
